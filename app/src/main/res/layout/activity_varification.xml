<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".VarificationActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:rotation="180"
            android:src="@drawable/arrow"
            android:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="@string/otp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_45sdp"
        android:src="@drawable/stsk_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/continue_with_phone"
            android:textColor="@color/purple"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/continue_with_phone"
            android:textColor="@color/medium_black"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/mobile_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/num"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />
        <LinearLayout
            android:id="@+id/otp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_8sdp"
            tools:ignore="ObsoleteLayoutParam">

            <EditText
                android:id="@+id/editOTP_Txt1"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/border_radius_color_primary"
                android:gravity="center"
                android:hint="X"
                android:inputType="number"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:textColor="@color/black"
                android:textColorHint="@color/resend_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editOTP_Txt2"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/border_radius_color_primary"
                android:gravity="center"
                android:hint="X"
                android:inputType="number"
                android:maxLength="1"

                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:textColor="@color/black"
                android:textColorHint="@color/resend_color"
                android:textSize="18sp"
                android:layout_marginLeft="@dimen/_5sdp" />

            <EditText
                android:id="@+id/editOTP_Txt3"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/border_radius_color_primary"
                android:gravity="center"
                android:hint="X"
                android:inputType="number"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:textColor="@color/black"
                android:textColorHint="@color/resend_color"
                android:textSize="18sp"
                android:layout_marginLeft="@dimen/_5sdp" />

            <EditText
                android:id="@+id/editOTP_Txt4"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/border_radius_color_primary"
                android:gravity="center"
                android:hint="X"
                android:inputType="number"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:textColor="@color/black"
                android:textColorHint="@color/resend_color"
                android:textSize="18sp"
                android:layout_marginLeft="@dimen/_5sdp" />
        </LinearLayout>

        <TextView
            android:id="@+id/resent_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/resend_code_by_call"
            android:textColor="@color/sky_blue"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/_14sdp" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/resent_otp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/blue_gradient"
            android:text="@string/send"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>



</RelativeLayout>